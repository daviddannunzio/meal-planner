{
    "name" : "Instant Pot Stroganoff",
    "meat" : "V",
    "website" : "https://www.feastingathome.com/instant-pot-mushroom-stroganoff/",
    "steps" : [
        {
            "step_number" : 1,
            "step_description" : "Heat oil on “sauté” function.  Add onion, garlic, mushrooms, salt and pepper and saute 7-9 minutes or until mushrooms release their liquid."
        },
        {
            "step_number" : 2,
            "step_description" : "Add sherry wine,  2 cups broth, mustard and flour and stir well, scraping up any browned bits  (to prevent burn error)"
        },
        {
            "step_number" : 3,
            "step_description" : "Add the  pasta, stir."
        },
        {
            "step_number" : 4,
            "step_description" : "Set instant pot to pressure cook on high for 3-4 minutes. (see notes)"
        },
        {
            "step_number" : 5,
            "step_description" : "Manually release ( placing a towel over the steam)."
        },
        {
            "step_number" : 6,
            "step_description" : "Stir in the sour cream, and keep on warm setting for 5-10 minutes. Sauce will thicken slightly, but will remain “saucy” enough for dipping garlic bread."
        },
        {
            "step_number" : 7,
            "step_description" : "Garnish with parsley"
        }
    ],
