{
    "name" : "Three Alarm Beef Chili",
    "meat" : "B",
    "website" : "",
    "steps" : [
        {
            "step_number" : 1,
            "step_description" : "Mash bread and milk into paste in large bowl using fork. Mix in ground beef, 0.25 teaspoon salt, and salt 0.25 teaspoon pepper using hands."
        },
        {
            "step_number" : 2,
            "step_description" : "Heat oil in 12 inch skillet over medium-high heat until shimmering. Add onions, habaneros, chili powder, tomato paste, garlic, cumin, oregano, and red pepper flakes and cook until vegetables are softened and lightly browned, 8 to 10 minutes."
        },
        {
            "step_number" : 3,
            "step_description" : "Stir in beef mixture and cook, breaking up any large pieces with wooden spoon, until no longer pink, about 3 minutes. Stir in tomato sauce, scraping up any browned bits; transfer to slow cooker."
        },
        {
            "step_number" : 4,
            "step_description" : "Stir diced tomatoes with juice, beans, soy sauce, sugar, and chipotles into slow cooker. Cover and cook until beef is tender, 6 to 8 hours on low or 3 to 5 hours on high."
        },
        {
            "step_number" : 5,
            "step_description" : "Let chili settle for 5 minutes, then remove fat from surface using large spoon. Break up any remaining large pieces of beef with spoon. Season with salt, hot sauce, and additional chipotles to taste, and serve."
        }
    ],
